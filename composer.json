{
  "name": "voral/joke-templatoe",
  "description": "Templator for Joke micro-framework",
  "type": "library",
  "version": "0.0.1",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.4",
    "voral/joke": "dev-next"
  },
  "require-dev": {
    "voral/version-increment": "^3.2",
    "phpunit/phpunit": "^12.5",
    "php-mock/php-mock-phpunit": "^2.14"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Vasoft\\Joke\\Templator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vasoft\\Joke\\Templator\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "dev": "php -S localhost:8000 -t public/",
    "test": "php vendor/bin/phpunit --display-warnings --exclude-group=skip",
    "vi:major": "php ./vendor/bin/vs-version-increment major",
    "vi:minor": "php ./vendor/bin/vs-version-increment minor",
    "vi:patch": "php ./vendor/bin/vs-version-increment patch",
    "vi": "php ./vendor/bin/vs-version-increment",
    "vi:list": "php ./vendor/bin/vs-version-increment --list",
    "vi:debug": "php ./vendor/bin/vs-version-increment --debug"
  },
  "scripts-descriptions": {
    "dev": "Start development server on http://localhost:8000",
    "test": "Run PHPUnit tests (exclude group 'skip')",
    "vi:major": "Increment major version and update CHANGELOG.md",
    "vi:minor": "Increment minor version and update CHANGELOG.md",
    "vi:patch": "Increment patch version and update CHANGELOG.md",
    "vi": "Auto-detect version increment based on commit analysis",
    "vi:list": "Display registered commit types and scopes",
    "vi:debug": "Preview auto-detected changes without applying them"
  },
  "authors": [
    {
      "name": "Alexander Vorobyev",
      "email": "voral.adm@gmail.com"
    }
  ]
}
